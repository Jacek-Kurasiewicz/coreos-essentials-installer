TOOLBOX_DOCKER_IMAGE=adelaar/coreos-essentials-installer
TOOLBOX_USER=core
TOOLBOX_DOCKER_TAG=latest

# BIND needed host directories
TOOLBOX_BIND="\
    --bind=/:/coreos \
    --bind=/etc:/mnt/etc --bind=/root:/mnt/root --bind=/home/core:/mnt/core --bind=/opt/bin:/opt/bin \
    --bind=/run/docker.sock --bind=/run/fleet.sock ${SSH_AUTH_BIND} \
    --bind-ro=/usr/bin/docker --bind-ro=/usr/bin/fleetctl --bind-ro=/usr/bin/etcdctl \
    --quiet \
    --setenv=IGNOREEOF=4"
